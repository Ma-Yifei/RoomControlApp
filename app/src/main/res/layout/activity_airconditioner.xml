<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#F0F0F0"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/temperature_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temperature"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="25"
                android:textAllCaps="false"
                android:textSize="99sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/temperature"
                android:layout_marginEnd="51dp"
                android:text="℃"
                android:textSize="99sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/parameter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-101dp"
                android:layout_toStartOf="@+id/textView2"
                app:srcCompat="@drawable/wind_speed0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="103dp"
                android:text="风速" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="138dp"
                android:text="自动" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="112dp"
                app:srcCompat="@drawable/refrigeration" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="77dp"
                android:text="制冷" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/function1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wind_speed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="风速"
            android:textColor="#000"
            android:textSize="14sp"
            app:fontFamily="sans-serif-condensed" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:layout_gravity="center_horizontal"    />


        <RelativeLayout
            android:id="@+id/switch_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/switch1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/airconditioner_switch" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:layout_gravity="center_horizontal"    />

        <TextView
            android:id="@+id/model"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="模式"
            android:textColor="#000"
            android:textSize="14sp" />




    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />
    <LinearLayout
        android:id="@+id/function2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:orientation="horizontal">



        <RelativeLayout
            android:id="@+id/decrease_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/decrease"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"

                android:background="@drawable/airconditioner_decrease" />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:layout_gravity="center_horizontal"    />

        <RelativeLayout
            android:id="@+id/add_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"

                android:background="@drawable/airconditioner_add" />
        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />
    <LinearLayout
        android:id="@+id/function3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@fonts/Roboto-BoldItalic"
            android:gravity="center"
            android:text="定时"
            android:textColor="#000"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:layout_gravity="center_horizontal"    />


        <TextView
            android:id="@+id/wind_direction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@fonts/Roboto-BoldItalic"
            android:gravity="center"
            android:text="风向"
            android:textColor="#CED1D8"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            android:layout_gravity="center_horizontal"    />

        <TextView
            android:id="@+id/swing_flap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="扫风"
            android:textColor="#CED1D8"
            android:textSize="14sp" />



    </LinearLayout>

</LinearLayout>